<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civUser"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:src="@drawable/user" />

    <RelativeLayout
        android:id="@+id/rlReceiver"
        android:layout_width="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/civUser"
        android:background="@drawable/bg_chat_left_bottom"
        android:padding="@dimen/dp5">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp20"
            android:gravity="center_vertical|start"
            android:paddingVertical="@dimen/dp5"
            android:text="@string/app_name"
            android:textColor="@color/black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlReceiver"
        android:layout_alignEnd="@+id/rlReceiver"
        android:layout_marginTop="@dimen/dp5"
        android:text="45 sec ago"
        android:textColor="@color/black"
        android:textSize="@dimen/sp12"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/_5sdp"/>


</RelativeLayout>


