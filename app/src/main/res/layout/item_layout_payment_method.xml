<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_125sdp"
    android:layout_height="@dimen/_170sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/bg_add_card"
        android:id="@+id/rlCard"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_170sdp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivTick"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/success" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toStartOf="@+id/ivTick"
                android:text="@string/visa"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tvExpiry"
            android:layout_below="@+id/rlTop"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_number"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvCardNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="**** **** 1111"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Expired: 04/21"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llAddCard"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_170sdp"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/bg_add_card"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/addd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/add_new_card"
            android:textColor="@color/green"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

</RelativeLayout>